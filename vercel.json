{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,
      "memory": 512,
      "runtime": "edge"
    }
  },
  "headers": [
    {
      "source": "/api/**",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        }
      ]
    }
  ]
}
